# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files - disable auto-modifications to prevent files showing as uncommitted
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx,mjs}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
