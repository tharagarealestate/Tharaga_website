# Environment variables for Docker Compose local/dev runs
# Usage:
# 1) Copy this file to `.env` at the repo root before running Docker:
#      cp .env.example .env
# 2) Fill in real credentials below.

########################################
# Core integrations
########################################

# OpenAI (used by SaaS server for AI features)
OPENAI_API_KEY=

# Razorpay (required for subscriptions/webhooks in SaaS server)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Razorpay plan IDs (map to code in `saas-server/src/config.ts`)
# Monthly plans
RZP_PLAN_GROWTH=
RZP_PLAN_SCALE=
# Yearly plans
RZP_PLAN_GROWTH_ANNUAL=
RZP_PLAN_SCALE_ANNUAL=

########################################
# Optional email/SMS providers
########################################

# SMTP (emails from SaaS server)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@tharaga.co.in

# Twilio (SMS from SaaS server)
# Note: variable names expected by code: TWILIO_SID, TWILIO_AUTH_TOKEN, TWILIO_FROM
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

########################################
# Security/other
########################################

# Supabase JWT secret (if integrating auth that verifies Supabase tokens)
SUPABASE_JWT_SECRET=

# Feature flags
AUTO_APPLY_TIER_RECOMMENDATIONS=false
